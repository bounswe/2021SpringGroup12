<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:fillViewport="true">
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <View
        android:id="@+id/ust_orta"
        android:layout_width="match_parent"
        app:layout_constraintVertical_bias="0.30"
        android:layout_height="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>
    <View
        android:id="@+id/uctebir"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_bias="0.33"
        android:layout_width="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/ucteiki"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_bias="0.67"
        android:layout_width="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <View
        android:id="@+id/orta"
        android:layout_height="match_parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:layout_width="1dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ust_orta"
        app:layout_constraintEnd_toEndOf="@id/uctebir"
        android:id="@+id/num_of_goals"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.33"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_yellow_outline">

        <TextView
            android:id="@+id/numofGoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="50"
            android:textAlignment="center"
            android:textSize="60sp"
            android:textColor="@color/yellow_second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Goals"
            app:layout_goneMarginTop="0dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/yellow_third"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numofGoals" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintStart_toStartOf="@id/uctebir"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@id/ucteiki"
        android:layout_marginTop="10dp"
        android:id="@+id/item_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_yellow_outline"
        app:layout_constraintStart_toEndOf="@+id/num_of_goals">


        <TextView
            android:id="@+id/numOfCompleted"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="20"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/yellow_second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Completed"
            app:layout_goneMarginTop="0dp"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textColor="@color/yellow_third"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/numOfCompleted" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintStart_toStartOf="@id/uctebir"
        app:layout_constraintTop_toBottomOf="@id/item_parent"
        app:layout_constraintEnd_toEndOf="@id/ucteiki"
        android:layout_marginTop="10dp"
        android:id="@+id/avg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_yellow_outline"
        app:layout_constraintStart_toEndOf="@+id/num_of_goals">


        <TextView
            android:id="@+id/avgtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="120"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/yellow_second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_description3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Avg.Time(min)"
            app:layout_goneMarginTop="0dp"
            android:textAlignment="center"
            android:textSize="10sp"
            android:textColor="@color/yellow_third"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avgtime" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ust_orta"
        app:layout_constraintStart_toStartOf="@id/ucteiki"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/avg_rate"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        app:layout_constraintHorizontal_bias="0.33"
        android:padding="10dp"
        android:background="@drawable/bg_rounded_yellow_outline">

        <TextView
            android:id="@+id/avgRate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="4.3"
            android:textAlignment="center"
            android:textSize="60sp"
            android:textColor="@color/yellow_second"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_description4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Average Rate"
            app:layout_goneMarginTop="0dp"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/yellow_third"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/avgRate" />


    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/best_goal"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_rounded_yellow_outline"
        app:layout_constraintTop_toTopOf="@id/ust_orta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/orta">

        <TextView
            android:id="@+id/tv_title_best_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal Name"
            android:textAlignment="center"
            android:textColor="@color/yellow_second"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/tv_des_best"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/yellow_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_best_goal"  />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       app:layout_constraintBottom_toTopOf="@id/best_goal"
       android:text="Best Goal"
       android:textAlignment="center"
       app:layout_constraintEnd_toEndOf="@id/orta"
       app:layout_constraintStart_toStartOf="parent">
   </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/worst_goal"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_rounded_yellow_outline"
        app:layout_constraintTop_toBottomOf="@id/best_goal"
        app:layout_constraintStart_toStartOf="@id/orta"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_title_worst_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal Name"
            android:textAlignment="center"
            android:textColor="@color/yellow_second"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="20dp" />
        <TextView
            android:id="@+id/tv_des_worst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/yellow_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_worst_goal"  />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/worst_goal"
        android:text="Worst Goal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/orta">
    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/long_goal"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_rounded_yellow_outline"
        app:layout_constraintTop_toBottomOf="@id/worst_goal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="@id/orta">

        <TextView
            android:id="@+id/tv_title_long_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal Name"
            android:textAlignment="center"
            android:textColor="@color/yellow_second"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/tv_des_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/yellow_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_long_goal"  />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/long_goal"
        android:text="Longest Goal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@id/orta"
        app:layout_constraintStart_toStartOf="parent">
    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/short_goal"
        android:layout_width="180sp"
        android:layout_height="180sp"
        android:padding="10dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/bg_rounded_yellow_outline"
        app:layout_constraintTop_toBottomOf="@id/long_goal"
        app:layout_constraintStart_toStartOf="@id/orta"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tv_title_short_goal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Goal Name"
            android:textAlignment="center"
            android:textColor="@color/yellow_second"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="20dp" />
        <TextView
            android:id="@+id/tv_des_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Description"
            android:textAlignment="center"
            android:textSize="20sp"
            android:textColor="@color/yellow_second"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_short_goal"  />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/short_goal"
        android:text="Shortest Goal"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/orta">
    </TextView>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>