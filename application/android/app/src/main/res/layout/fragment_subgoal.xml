<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaskFragment"
    android:orientation="vertical"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subgoal title"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="69dp"
            android:layout_marginLeft="0dp"
            tools:src="@tools:sample/avatars"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />

        <TextView
            android:id="@+id/tv_descriptionTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="15dp"
            android:text="Description:"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title"
            app:layout_constraintStart_toEndOf="@+id/imageView" />


        <TextView
            android:id="@+id/tv_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Here is some description"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/tv_descriptionTitle"
            app:layout_constraintTop_toBottomOf="@+id/tv_title" />
        <ImageButton
            android:id="@+id/addTagButton"
            android:layout_width="46dp"
            android:layout_height="37dp"
            android:src="@drawable/ic_action_name"
            app:layout_constraintTop_toBottomOf="@+id/tv_description"
            app:layout_constraintStart_toEndOf="@+id/imageView"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_tag_cardview"
            app:layout_constraintStart_toEndOf="@+id/addTagButton"
            app:layout_constraintTop_toBottomOf="@+id/imageView"/>

        <TextView
            android:id="@+id/tv_subgoals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Subgoals"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_tags" />
        <ImageButton
            android:id="@+id/addSubgoalButton"
            android:layout_width="46dp"
            android:layout_height="37dp"
            android:layout_marginTop="4dp"
            android:src="@drawable/ic_action_name"
            app:layout_constraintTop_toBottomOf="@+id/rv_tags"
            app:layout_constraintStart_toEndOf="@+id/tv_subgoals"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_subgoals"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_subgoal_cardview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_subgoals"/>

        <TextView
            android:id="@+id/tv_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tasks"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_subgoals" />
        <ImageButton
            android:id="@+id/addTaskButton"
            android:layout_width="46dp"
            android:layout_height="37dp"
            android:src="@drawable/ic_action_name"
            app:layout_constraintTop_toBottomOf="@+id/rv_subgoals"
            app:layout_constraintStart_toEndOf="@+id/tv_tasks"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_tasks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:orientation="horizontal"
            tools:listitem="@layout/item_task_cardview"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_tasks"/>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="#777777"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_tasks" />


        <TextView
            android:id="@+id/tv_routines"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Routines"
            android:textStyle="bold"
            android:textSize="25sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_tasks" />
        <ImageButton
            android:id="@+id/addRoutineButton"
            android:layout_width="46dp"
            android:layout_height="37dp"
            android:layout_marginTop="6dp"
            android:src="@drawable/ic_action_name"
            app:layout_constraintTop_toBottomOf="@+id/rv_tasks"
            app:layout_constraintStart_toEndOf="@+id/tv_routines"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_routines"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintTop_toBottomOf="@+id/tv_routines"
            tools:listitem="@layout/item_routine_cardview" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777777"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_routines"/>


        <TextView
            android:id="@+id/tv_questions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Questions"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view" />
        <ImageButton
            android:id="@+id/addRQuestionButton"
            android:layout_width="46dp"
            android:layout_height="37dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/ic_action_name"
            app:layout_constraintTop_toBottomOf="@+id/rv_routines"
            app:layout_constraintStart_toEndOf="@+id/tv_questions"/>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_questions"
            tools:listitem="@layout/item_question_cardview" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#777777"
            android:layout_marginTop="10dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rv_questions"/>

        <ImageButton
            android:id="@+id/imageButton3"
            android:layout_width="34dp"
            android:layout_height="36dp"
            android:src="@drawable/edit_page"
            android:layout_marginRight="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />






    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>