<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp">
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Link Entity"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_existing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Existing Entity"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"/>


    <Spinner
        android:id="@+id/spn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:spinnerMode="dropdown"
        app:layout_constraintTop_toBottomOf="@id/tv_existing"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btn_add_entity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Entity"
        android:backgroundTint="@color/yellow_second"
        app:layout_constraintTop_toBottomOf="@id/spn"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="10dp"/>

    <Button
        android:id="@+id/btn_dismiss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Dismiss"
        android:layout_margin="20dp"
        android:backgroundTint="#CCCCCC"
        app:layout_constraintTop_toBottomOf="@id/btn_add_entity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_approve"/>

    <Button
        android:id="@+id/btn_approve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Save"
        android:layout_margin="20dp"
        app:layout_constraintTop_toBottomOf="@id/btn_add_entity"
        app:layout_constraintStart_toEndOf="@id/btn_dismiss"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>